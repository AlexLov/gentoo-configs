# Window manager and around
gui-wm/sway # window manager
gui-apps/waybar # status bar
gui-apps/wtype # simulate keyboard
sys-power/acpilight # brightness manager
sys-power/acpi # Battery status and something else
gui-apps/wev # event viewer (mostly to get pressed keys)
# Clipboard
gui-apps/wl-clipboard
gui-apps/wl-clipboard-x11

# Screenshots
gui-apps/grim
gui-apps/slurp
media-gfx/imv  # minimal image viewer
media-gfx/chafa # show images in terminal

# Login screen
gui-apps/tuigreet # Simple login screen
gui-libs/display-manager-init # to start display manager and screen login

# Notifications
gui-apps/mako # notifications
x11-libs/libnotify # needed to support notifications from some apps, in particular firefox

# Fonts
media-fonts/dejavu
media-fonts/freefont
media-fonts/liberation-fonts
media-fonts/noto
media-fonts/noto-emoji # emoji font

# General apps
www-client/firefox # browser
www-client/vivaldi # chrome-based browser
gui-apps/foot # terminal
gui-apps/wofi # dmenu
www-client/links # text based browser

# Some convinient and helper programs
x11-misc/xdg-utils # for xdg-open which opens files in default program

# TODO replace it with something more convinient
net-misc/keychain # add ssh keys to ssh-agent

# Moonlander keyboard configurator
dev-embedded/wally-cli-bin

# VNC client
net-misc/remmina

# CLI tools
sys-apps/pv  # pipe viewer - progress bar for terminal
